<UserControl x:Class="TestUsers.UserControlManual"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestUsers"
        mc:Ignorable="d" Height="648" Width="838"
        Background="White">

    <Grid>
        <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Margin="25 25 0 0">
            <StackPanel Orientation="Vertical">
                <Label Content="Инструкция" HorizontalAlignment="Left" FontSize="40" FontWeight="Bold" Margin="0 0 0 10" FontFamily="Poppins" Foreground="#FF14142B"></Label>
                <Label HorizontalAlignment="Center" Margin="0,15,10,10" Width="790" Height="500">
                    <Label.Content>
                        <AccessText x:Name="TextManual"  FontSize="18" FontFamily="Poppins" TextWrapping="Wrap"/>
                    </Label.Content>
                </Label>
            </StackPanel>
        </Grid>
    </Grid>
